<?php
class DatabaseManager {
	private $db;

	public function connect() {
		$host = "host=localhost";
		$port = "port=5432";
		$dbname = "dbname=projet";
		$credentials = "user=postgres password=postgres";
		
		$this->$db = pg_connect ( "self::host $port $dbname $credentials" );
		if(!$this->$db)
			return FALSE;
		else
			return TRUE;
	}
}

?>