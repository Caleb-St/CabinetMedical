<?php
require_once("DatabaseManager.php");
session_start ();
$userID = $_SESSION["userID"];
$DBManager = $_SESSION["DatabaseManager"];

$ret = $DBManager->runQuery("SELECT nom,prenom from CabinetMD.Medecin WHERE medID='$ID';");
$row = pg_fetch_row($ret);
echo "Bonjour Dr. " . $row[1] . " " . $row[0];

$sql = <<<EOF
      SELECT prenom, nom, duree 
      FROM Consultation NATURAL JOIN Patient 
      WHERE medID='$ID' AND cdate=current_date;
EOF;
$appointments = $DBManager->runQuery($sql);
?>
<h2>Consultations d'ajourd'hui</h2>
<table>
<tr>
<th>Heure</th>
<th>Patient</th>
<th>Duree</th>
</tr>
<?php 
while($row = pg_fetch_row($appointments)){
	for($i=0; $i<pg_num_fields($appointments); $i++) {
		echo "<tr> \n";
		echo "<td>" . $row[$i] . "</td>";
		echo "</tr> \n";
	}
}
?>
</table>
